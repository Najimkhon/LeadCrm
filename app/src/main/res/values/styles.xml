<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ChipStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/primary_button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">6dp</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/secondary_button_bg</item>
        <item name="android:textColor">@color/primary_button_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">6dp</item>
        <item name="android:translationZ">2dp</item>
    </style>
</resources>