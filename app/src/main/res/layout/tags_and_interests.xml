<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTagsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Tags and Interests"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDemographic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:text="Demographic:"
        android:textColor="@color/sub_header_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTagsLabel" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/tagMale"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDemographic">
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ChipStyle"
            android:textColor="@color/tag_text_color"
            app:chipBackgroundColor="@color/tag_bg_color"
            android:text="Tag name example"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ChipStyle"
            android:textColor="@color/tag_text_color"
            app:chipBackgroundColor="@color/tag_bg_color"
            android:text="Tag name example"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ChipStyle"
            android:textColor="@color/tag_text_color"
            app:chipBackgroundColor="@color/tag_bg_color"
            android:text="Tag name example"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ChipStyle"
            android:textColor="@color/tag_text_color"
            app:chipBackgroundColor="@color/tag_bg_color"
            android:text="Tag name example"
            />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/tvInterests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="22dp"
        android:text="Interests:"
        android:textColor="@color/sub_header_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tagMale" />

    <TextView
        android:id="@+id/tvLuxuryItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:text="&#x2022;  Luxury items"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInterests" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/tagExample"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLuxuryItems">
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ChipStyle"
            android:textColor="@color/tag_text_color"
            app:chipBackgroundColor="@color/tag_bg_color"
            android:text="Tag name example"
            />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/tvBusinessTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:text="&#x2022;  Business and Industry"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tagExample" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/tagBusiness"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBusinessTags">
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ChipStyle"
            android:textColor="@color/tag_text_color"
            app:chipBackgroundColor="@color/tag_bg_color"
            android:text="Tag name example"
            />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/tvEntertainmentTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:text="&#x2022;  Entertainment"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tagBusiness" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/tagEntertainment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEntertainmentTags">
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ChipStyle"
            android:textColor="@color/tag_text_color"
            app:chipBackgroundColor="@color/tag_bg_color"
            android:text="Tag name example"
            />
    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>